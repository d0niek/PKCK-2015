<?xml version="1.0" encoding="utf-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://osoba.xml.pl"
            xmlns="http://osoba.xml.pl">
            
    <xsd:element name="autorzy">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="student" maxOccurs="2"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="student">
        <xsd:sequence>
            <xsd:element ref="imię"/>
            <xsd:element name="drugie_imię" type="imię" minOccurs="0" maxOccurs="1"/>
            <xsd:element ref="nazwisko"/>
            <xsd:element ref="numer_indeksu"/>
            <xsd:element ref="kierunek"/>
        </xsd:sequence>
    </xsd:element>

    <xsd:simpleType name="imię">
        <xsd:restriction base="xsd:string">
            <xsd:maxLength value="20"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="nazwisko">
        <xsd:restriction base="xsd:string">
            <xsd:maxLength value="30"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="numer_indeksu">
        <xsd:restriction base="xsd:int">
            <xsd:totalDigits value="6" />
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="kierunek" type="jakieKierunki"/>

    <xsd:simpleType name="jakieKierunki">
        <xsd:restriction base="xsd:token">
            <xsd:enumeration value="Informatyka, Technologie Gier i Symulacji Komputerowych"/>
            <xsd:enumeration value=""/>
            <xsd:enumeration value=""/>
            <xsd:enumeration value=""/>
            <xsd:enumeration value=""/>
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>
